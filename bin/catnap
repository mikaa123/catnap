#!/usr/bin/env node

var nodemon = require('nodemon'),
	path = require('path'),
	argv = require('minimist')(process.argv.slice(1));

nodemon({
	watch: process.cwd(),
	script: path.join(__dirname, 'catnap_runner'),
	args: argv.p ? [argv.p] : []
});

nodemon
	.on('start', function () {
		console.log('app started');
	})
	.on('quit', function () {
		console.log('quit');
	})
	.on('restart', function (files) {
		console.log('restart!');
	});
