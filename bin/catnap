#!/usr/bin/env node

var nodemon = require('nodemon'),
	path = require('path');

nodemon({
	watch: process.cwd(),
	script: path.join(__dirname, 'catnap_runner')
});

nodemon
	.on('start', function () {
		console.log('app started');
	})
	.on('quit', function () {
		console.log('quit');
	})
	.on('restart', function (files) {
		console.log('restart!');
	});
